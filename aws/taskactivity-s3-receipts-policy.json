{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReceiptObjectAccess",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::taskactivity-receipts-prod/*"
    },
    {
      "Sid": "ReceiptBucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::taskactivity-receipts-prod"
    }
  ]
}