# npm network resilience configuration for Jenkins CI/CD builds
# Addresses intermittent ETIMEDOUT errors from npm registry

# Retry timing configuration
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-timeout=300000
fetch-retries=5
fetch-retry-factor=10

# Socket-level timeout (default is 30s which causes ETIMEDOUT on slow connections)
# Set to 10 minutes to survive registry slowdowns
network-timeout=600000

# Registry configuration
registry=https://registry.npmjs.org/
